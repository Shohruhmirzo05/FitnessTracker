doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title} - Fitness Goal Tracker
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/styles/style.css")
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      div.container
        a.navbar-brand(href="/") Fitness Goal Tracker
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        div.collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/") Home
            li.nav-item
              a.nav-link(href="/goals") Goals
            li.nav-item
              a.nav-link(href="/goals/create") Create Goal

    main.container.py-4
      block content
      
    footer.bg-light.py-3.mt-5
      div.container.text-center
        p This web application was created to fulfill Web Technology module's requirements and does not represent an actual company or service
        p &copy; #{new Date().getFullYear()} Fitness Goal Tracker

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="/javascripts/main.js")
    block scripts 